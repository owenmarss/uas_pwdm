<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    tools:context=".EditorBookActivity">

    <TextView
        android:id="@+id/txt_judulBuku_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Buku: "/>

    <EditText
        android:id="@+id/input_judulBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_judulBuku_label"/>

    <TextView
        android:id="@+id/txt_penulis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_judulBuku"
        android:text="Penulis: "/>

    <EditText
        android:id="@+id/input_penulis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_penulis_label"/>

    <TextView
        android:id="@+id/txt_tahunTerbit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_penulis"
        android:text="Tahun Terbit: "/>

    <EditText
        android:id="@+id/input_tahunTerbit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/txt_tahunTerbit_label"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/input_tahunTerbit"
        android:text="Simpan" />
</RelativeLayout>